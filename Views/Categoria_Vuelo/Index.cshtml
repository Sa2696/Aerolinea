@model IEnumerable<Aerolinea.Models.Categoria_Vuelo>

@{
    ViewData["Title"] = "Index";
}

<h1>Registros de Categorias</h1>

<p>
    <a asp-action="Create">Crear Nuevas</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salida)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salida)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SerieAvion">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SerieAvion">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SerieAvion">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
